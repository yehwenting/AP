<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_background_color">@color/ak_background</item>
        <item name="com_accountkit_text_color">@color/ak_text</item>
        <item name="com_accountkit_button_background_color">@color/colorOrange</item>
        <item name="com_accountkit_button_pressed_background_color">@color/ak_buttonPressedBackground</item>
        <item name="com_accountkit_button_text_color">@color/ak_buttonText</item>
        <item name="com_accountkit_input_background_color">@color/ak_inputBackground</item>
        <item name="com_accountkit_input_text_color">@color/ak_inputText</item>
        <item name="com_accountkit_status_bar_color">@color/ak_statusBar</item>
        <item name="com_accountkit_icon_color">@color/ak_icon</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarTheme"
        parent="Theme.AppCompat.Light">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/nav_line</item>
    </style>
    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">#ffa000</item>
        <!-- Default color for the dropdown arrow and line -->
        <!--<item name="colorControlNormal">#ffc107</item>-->
    </style>

        <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
            <!-- Used for the buttons -->
            <item name="colorAccent">#ffa000</item>
            <!-- Used for the title and text -->
            <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
            <!-- Used for the background -->
            <item name="android:background">@color/colorWhite</item>
            <item name="android:letterSpacing">0.1</item>
            <item name="android:layout_margin">3dp</item>
            <item name="android:lineSpacingExtra">5dp</item>
        </style>

</resources>
