<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ButtonBad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView3"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/ButtonBase"
        android:background="@drawable/shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/badminton" />

    <ImageButton
        android:id="@+id/ButtonBase"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/ButtonPing"
        android:layout_below="@+id/ButtonTennis"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/baseball" />

    <ImageButton
        android:id="@+id/ButtonBasket"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/ButtonTennis"

        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ButtonBase"
        android:background="@drawable/shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/basketball" />

    <ImageButton
        android:id="@+id/ButtonJog"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/ButtonVolley"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ButtonBase"
        android:background="@drawable/shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/jogging" />

    <ImageButton
        android:id="@+id/ButtonTennis"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/ButtonBasket"

        android:layout_alignTop="@+id/ButtonExer"
        android:background="@drawable/shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/tennis" />

    <ImageButton
        android:id="@+id/ButtonVolley"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/ButtonBad"
        android:layout_below="@+id/ButtonTennis"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/volleyball" />

    <ImageButton
        android:id="@+id/ButtonPing"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/ButtonOther"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pingpong" />

    <ImageButton
        android:id="@+id/ButtonExer"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_alignStart="@+id/ButtonBase"
        android:layout_alignTop="@+id/ButtonBad"
        android:background="@drawable/shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/exercise" />

    <ImageButton
        android:id="@+id/ButtonOther"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/ButtonBasket"
        android:layout_below="@+id/ButtonBase"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:elevation="4dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/other" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="@string/question"
        android:textSize="14sp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/accountText"
        app:itemTextColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation_main" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.25"
        app:srcCompat="@drawable/r_bg" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


</RelativeLayout>