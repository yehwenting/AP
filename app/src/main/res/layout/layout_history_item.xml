<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@drawable/story_box">

            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="運動項目："
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/type_tv"
                android:text="籃球"/>

            <TextView
                android:id="@+id/startTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_tv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="開始時間："/>

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/startTime_tv"
                android:layout_below="@+id/type_tv"
                android:layout_marginTop="10dp"
                android:text="10:00"/>

            <TextView
                android:id="@+id/endTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startTime_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="結束時間："/>

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_time"
                android:layout_toRightOf="@id/endTime_tv"
                android:layout_marginTop="10dp"
                android:text="11:00"/>

        </RelativeLayout>







    </RelativeLayout>









</RelativeLayout>