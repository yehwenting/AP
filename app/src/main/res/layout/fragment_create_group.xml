<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/ak_text" />

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:srcCompat="@drawable/group_y" />


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="創造屬於你的X特攻隊"
                android:textColor="@color/colorWhite" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp">

                <RelativeLayout
                    android:id="@+id/re"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageLogo"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/cName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:text="特攻隊名"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/cName"
                        android:layout_below="@+id/sName"
                        android:layout_marginTop="20dp"
                        android:text="@string/type"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/cType"
                        android:layout_below="@+id/cType"
                        android:layout_marginTop="25dp"
                        android:text="@string/time"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/cTime"
                        android:layout_below="@+id/cTime"
                        android:layout_marginTop="24dp"
                        android:text="@string/place"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/cPlace"
                        android:layout_below="@+id/cPlace"
                        android:layout_marginTop="22dp"
                        android:text="@string/gnumber"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sTime"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignBottom="@+id/cTime"
                        android:layout_alignStart="@+id/cgNum"
                        android:background="@drawable/rounded_corner"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="@string/pleasechoose"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/sName"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignBaseline="@+id/cName"
                        android:layout_alignBottom="@+id/cName"
                        android:layout_marginStart="39dp"
                        android:layout_toEndOf="@+id/cType"
                        android:background="@drawable/rounded_corner"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/cgNum"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/cTime"
                        android:layout_alignStart="@+id/sName"
                        android:background="@drawable/rounded_corner" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignEnd="@+id/cgNum"
                        android:layout_alignTop="@+id/cgNum"
                        android:src="@drawable/drop" />

                    <EditText
                        android:id="@+id/sNum"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignBaseline="@+id/cNum"
                        android:layout_alignBottom="@+id/cNum"
                        android:layout_alignStart="@+id/spinnerPlace"
                        android:background="@drawable/rounded_corner"
                        android:ems="10"
                        android:inputType="number"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/spinnerPlace"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_above="@+id/cNum"
                        android:layout_alignStart="@+id/sTime"
                        android:background="@drawable/rounded_corner" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView4"
                >

            </RelativeLayout>

            <Button
                android:id="@+id/buttonG"
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_below="@+id/cardView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_gradient"
                android:text="發布揪團"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />


        </RelativeLayout>


    </ScrollView>



</RelativeLayout>