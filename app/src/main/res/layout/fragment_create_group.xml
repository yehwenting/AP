<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/ak_text" />

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:srcCompat="@drawable/group_y" />


            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="創造屬於你的X特攻隊"
                android:textColor="@color/colorWhite"
                android:letterSpacing="0.1"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slogan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp">

                <RelativeLayout
                    android:id="@+id/re"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageLogo"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp">

                    <EditText
                        android:id="@+id/sName"
                        android:layout_width="260dp"
                        android:layout_height="35dp"
                        android:layout_alignBaseline="@+id/cName"
                        android:layout_alignBottom="@+id/cName"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/background_join"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/cgNum"
                        android:layout_width="260dp"
                        android:layout_height="35dp"
                        android:layout_alignStart="@+id/sName"
                        android:layout_below="@+id/sName"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_join"
                        android:textAlignment="center"
                        android:theme="@style/ThemeSpinner" />

                    <TextView
                        android:id="@+id/sTime"
                        android:layout_width="260dp"
                        android:layout_height="35dp"
                        android:layout_alignStart="@+id/cgNum"
                        android:layout_below="@id/cgNum"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_join"
                        android:paddingTop="8dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/sNum"
                        android:layout_width="260dp"
                        android:layout_height="35dp"
                        android:layout_alignStart="@+id/spinnerPlace"
                        android:layout_below="@+id/spinnerPlace"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_join"
                        android:ems="10"
                        android:inputType="phone"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/spinnerPlace"
                        android:layout_width="260dp"
                        android:layout_height="35dp"
                        android:layout_alignStart="@+id/sTime"
                        android:layout_below="@+id/sTime"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_join"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/cName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/sName"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="26dp"
                        android:text="特攻隊名"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/cName"
                        android:layout_alignTop="@+id/cgNum"
                        android:layout_marginTop="8dp"
                        android:text="@string/type"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/cType"
                        android:layout_below="@+id/cgNum"
                        android:layout_marginTop="18dp"
                        android:text="@string/time"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/cTime"
                        android:layout_below="@+id/sTime"
                        android:layout_marginTop="18dp"
                        android:text="@string/place"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/cPlace"
                        android:layout_below="@+id/cPlace"
                        android:layout_marginTop="30dp"
                        android:text="@string/gnumber"
                        android:textSize="12sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView4"
                >

            </RelativeLayout>

            <Button
                android:id="@+id/buttonG"
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_below="@+id/cardView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_gradient"
                android:text="發布揪團"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp"
                android:letterSpacing="0.1"/>


        </RelativeLayout>


    </ScrollView>



</RelativeLayout>