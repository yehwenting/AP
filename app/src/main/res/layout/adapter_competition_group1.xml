<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="myandroidhello.com.ap_project.Adapter.CompetitionGroupAdapter">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <RelativeLayout
                android:background="@drawable/background_group"

                android:layout_width="280dp"
                android:layout_height="280dp">

                <TextView
                    android:id="@+id/cga_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/groupImg"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@+id/rank"
                    android:text="TextView"
                    android:textSize="16sp"
                    android:letterSpacing="0.1"
                    />


                <!--android:textColor="#FFB800" -->


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignBaseline="@+id/cga_num"
                    android:layout_alignBottom="@+id/cga_num"
                    android:layout_alignStart="@+id/textView4"
                    android:text="團員人數"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="85dp"
                    android:layout_height="25dp"
                    android:layout_alignStart="@+id/rank"
                    android:layout_below="@+id/rank"
                    android:layout_marginTop="23dp"
                    android:text="距離達標"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    />

                <TextView
                    android:id="@+id/cga_num"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignStart="@+id/goal"
                    android:layout_below="@+id/goal"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    />

                <ImageView
                    android:id="@+id/groupImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/user" />

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/groupImg"
                    android:layout_below="@+id/groupImg"
                    android:layout_marginTop="12dp"
                    android:text="NO.1"
                    android:textSize="40sp"
                    android:letterSpacing="0.1"
                    />

                <TextView
                    android:id="@+id/goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/cga_name"
                    android:layout_alignTop="@+id/textView4"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    />


            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>


</LinearLayout>
