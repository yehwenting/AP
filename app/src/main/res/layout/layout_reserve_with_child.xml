<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/exerPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />


        <TextView
            android:id="@+id/parentTextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="this is item with child!"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/childButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center">

            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_keyboard_arrow_up_black_24dp" />
        </RelativeLayout>
    </LinearLayout>

    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expendableLayout"
        android:layout_below="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ael_duration="400"
        app:ael_interpolator="bounce">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/reserve_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="日期"
                android:textSize="12sp"
                android:layout_weight = "1"/>

            <Button
                android:id="@+id/reserve_date_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="選擇日期"
                android:textSize="12sp"
                android:layout_marginStart="30dp"
                android:layout_weight = "1"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/reserve_time"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="開始時間"
            android:textSize="12sp"
            android:layout_weight = "1"/>
        <Button
            android:id="@+id/reserve_time_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="選擇開始時間"
            android:textSize="12sp"
            android:layout_weight = "1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/workout_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="運動時間"
            android:textSize="12sp"
            android:layout_weight="1"/>
            <RelativeLayout
                android:layout_marginTop="-10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:layout_weight="1">
        <Spinner
            android:id="@+id/workout_time_spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
             />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
        <!--<TextView-->
            <!--android:id="@+id/reserve_equip"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="20dp"-->
            <!--android:text="機台"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_weight="1"/>-->

        <!--<Button-->
            <!--android:id="@+id/reserve_equip_button"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="選擇機台"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginStart="30dp"-->

            <!--/>-->

            <Button
                android:id="@+id/reserve_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/login_button_selector"
                android:text="預約"
                android:layout_marginStart="250dp"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>




    </com.github.aakira.expandablelayout.ExpandableLinearLayout>


</RelativeLayout>