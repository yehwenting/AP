<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="myandroidhello.com.ap_project.Adapter.CompetitionGroupAdapter">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_group">

            <TextView
                android:id="@+id/cga_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cga_create_button"
                android:layout_alignBottom="@+id/cga_create_button"
                android:layout_toEndOf="@+id/textView3"
                android:text="TextView"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cga_create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/groupImg"
                android:layout_marginEnd="40dp"
                android:background="@drawable/cardview_button"
                android:text="+1"
                android:textColor="#FFB800" />

            <!--android:textColor="#FFB800" -->


            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/uName"
                android:layout_alignBottom="@+id/uName"
                android:layout_marginEnd="13dp"
                android:layout_toStartOf="@+id/uName"
                android:text="發起人"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="5dp"
                android:text="時間"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="5dp"
                android:text="地點"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                android:text="團員人數"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cga_num"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignStart="@+id/cga_place"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cga_place"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignStart="@+id/cga_time"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cga_time"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignStart="@+id/uName"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/uName"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@+id/cga_create_button"
                android:layout_below="@+id/cga_create_button"
                android:layout_marginEnd="54dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/groupImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView"
                android:layout_marginStart="13dp"
                android:layout_marginTop="19dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="5dp"
                android:text="剩餘人數"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/cga_remain"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignStart="@+id/cga_num"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView9"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="備註"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/cga_note"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignStart="@+id/cga_remain"
                android:text="TextView"
                android:textColor="#000000" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
