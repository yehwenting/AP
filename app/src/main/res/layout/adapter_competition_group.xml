<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="myandroidhello.com.ap_project.Adapter.CompetitionGroupAdapter">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="280dp">
            <!--android:background="@drawable/background_group"-->

            <TextView
                android:id="@+id/cga_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/uName"
                android:layout_alignTop="@+id/groupImg"
                android:layout_marginTop="9dp"
                android:text="TextView"
                android:textSize="16sp" />


            <!--android:textColor="#FFB800" -->


            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/groupImg"
                android:layout_below="@+id/groupImg"
                android:layout_marginTop="20dp"
                android:text="發起人"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="5dp"
                android:text="時間"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="5dp"
                android:text="地點"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                android:text="團員人數"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cga_num"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignStart="@+id/cga_place"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cga_place"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignStart="@+id/cga_time"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cga_time"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignStart="@+id/uName"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uName"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_marginStart="45dp"
                android:layout_toEndOf="@+id/groupImg"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/groupImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="5dp"
                android:text="剩餘人數"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cga_remain"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignStart="@+id/cga_num"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView9"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="備註"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cga_note"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignStart="@+id/cga_remain"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/cga_create_button"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/cardView2"
            android:layout_below="@+id/cardView2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cardview_button"
            android:text="+1"
            android:textColor="#FFB800"
            android:textSize="14sp" />
    </RelativeLayout>


</LinearLayout>
