<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--app:cardCornerRadius="15dp"-->


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="@drawable/background_gradient">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp">

            <ImageView
                android:id="@+id/groupImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/detail"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/c_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="33dp"
                android:layout_toEndOf="@+id/groupImg"
                android:text="TextView"
                android:textSize="14sp" />

            <Button
                android:id="@+id/detail"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="23dp"
                android:background="@drawable/cardview_button"
                android:text="詳細資訊"
                android:textColor="#FFB800"
                android:textSize="12sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expendableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView2"
        android:orientation="vertical"
        app:ael_duration="400"
        app:ael_interpolator="bounce">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/uName"
                android:layout_alignBottom="@+id/uName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="31dp"
                android:text="活動內容"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="5dp"
                android:text="目前參加團數"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="5dp"
                android:text="每團限制人數"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                android:text="活動截止時間"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/c_deadline"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignStart="@+id/c_constraint"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/c_constraint"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_below="@+id/c_number"
                android:layout_toEndOf="@+id/textView2"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/c_number"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignStart="@+id/uName"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/uName"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/create_button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/c_deadline"
                android:layout_marginEnd="11dp"
                android:background="@drawable/cardview_button"
                android:text="創團"
                android:textColor="#FFB800" />


        </RelativeLayout>


    </com.github.aakira.expandablelayout.ExpandableLinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/cGroup_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/expendableLayout"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"/>


</RelativeLayout>